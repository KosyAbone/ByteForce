<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.history.HistoryFragment">

    <TextView
        android:id="@+id/HistoryTV"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:text="History"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FromDate"
        android:layout_width="89dp"
        android:layout_height="26dp"
        android:layout_marginTop="28dp"
        android:text="From Date"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HistoryTV" />

    <TextView
        android:id="@+id/ToDate"
        android:layout_width="91dp"
        android:layout_height="23dp"
        android:layout_marginTop="24dp"
        android:text="To Date"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FromDateTimePicker" />

    <Button
        android:id="@+id/ToDateTimePicker"
        style="?android:spinnerStyle"
        android:layout_width="223sp"
        android:layout_height="50sp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:onClick="openDatePicker"
        android:text="Jan 1 2020"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ToDate" />

    <Button
        android:id="@+id/FromDateTimePicker"
        style="?android:spinnerStyle"
        android:layout_width="223sp"
        android:layout_height="50sp"
        android:layout_marginTop="8dp"
        android:onClick="openDatePicker"
        android:text="Jan 1 2020"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FromDate" />

    <Button
        android:id="@+id/Searchbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="12dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ToDateTimePicker"
        app:layout_constraintTop_toBottomOf="@+id/ToDate" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/HistoryRV"
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ToDateTimePicker" />


</androidx.constraintlayout.widget.ConstraintLayout>