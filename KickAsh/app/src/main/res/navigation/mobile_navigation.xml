<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.byteforce.kickash.ui.main.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_reward"
        android:name="com.byteforce.kickash.ui.main.reward.RewardFragment"
        android:label="Reward" />

     <fragment
    android:id="@+id/navigation_social"
    android:name="com.byteforce.kickash.ui.main.social.SocialFragment"
    android:label="Social"
    tools:layout="@layout/fragment_social" />


    <fragment
        android:id="@+id/navigation_info"
        android:name="com.byteforce.kickash.ui.main.info.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_notifications" />
</navigation>